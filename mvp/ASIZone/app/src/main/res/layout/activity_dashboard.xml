<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.dashboard.DashboardActivity">

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="65dp"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_above="@+id/linBottom"
            android:background="@color/grey"
            android:elevation="1dp"/>

        <LinearLayout
            android:id="@+id/linBottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtHome"
                style="@style/TextViewSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_home"
                android:gravity="center"
                android:text="Home" />

            <TextView
                android:id="@+id/txtSearch"
                style="@style/TextViewSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_search"
                android:gravity="center"
                android:text="Search" />

            <TextView
                android:id="@+id/txtUser"
                style="@style/TextViewSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_user"
                android:gravity="center"
                android:text="Profile" />

            <TextView
                android:id="@+id/txtWallet"
                style="@style/TextViewSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_wallet"
                android:gravity="center"
                android:text="Wallet" />

            <TextView
                android:id="@+id/txtJobPost"
                style="@style/TextViewSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_mailbox"
                android:gravity="center"
                android:text="Post" />
        </LinearLayout>

    </RelativeLayout>

</layout>